@page
@model RentalRepairs.WebUI.Pages.Worker.AssignmentsModel
@{
    ViewData["Title"] = "My Assignments";
}

<div class="container-fluid mt-4">
<!-- Page Header -->
<div class="row mb-4">
    <div class="col">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="h3 mb-1">
                    <i class="fas fa-tasks me-2"></i>My Work Assignments
                </h2>
                <p class="text-muted mb-0">
                    <i class="fas fa-user me-1"></i>@Model.WorkerName - @Model.Specialization Specialist
                </p>
            </div>
            <div>
                <a asp-page="/Worker/Available" class="btn btn-outline-primary">
                    <i class="fas fa-search me-2"></i>Find Available Work
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card border-primary">
            <div class="card-body text-center">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-muted mb-1">Total Assigned</h6>
                        <div class="h4 mb-0 text-primary">@Model.TotalAssigned</div>
                    </div>
                    <i class="fas fa-clipboard-list fa-2x text-primary opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-info">
            <div class="card-body text-center">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-muted mb-1">Upcoming</h6>
                        <div class="h4 mb-0 text-info">@Model.TotalUpcoming</div>
                    </div>
                    <i class="fas fa-calendar-alt fa-2x text-info opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-danger">
            <div class="card-body text-center">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-muted mb-1">Overdue</h6>
                        <div class="h4 mb-0 text-danger">@Model.TotalOverdue</div>
                    </div>
                    <i class="fas fa-exclamation-triangle fa-2x text-danger opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-body text-center">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-muted mb-1">Completed (This Month)</h6>
                        <div class="h4 mb-0 text-success">@Model.TotalCompleted</div>
                    </div>
                    <i class="fas fa-check-circle fa-2x text-success opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form method="get" class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label for="status" class="form-label">Status Filter</label>
                        <select name="status" id="status" class="form-select" asp-for="StatusFilter">
                            @foreach (var status in Model.StatusOptions)
                            {
                                <option value="@status" selected="@(status == Model.StatusFilter)">@status</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="fas fa-filter me-2"></i>Filter
                        </button>
                        <a asp-page="/Worker/Assignments" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-times me-2"></i>Clear
                        </a>
                    </div>
                    <div class="col-md-4 text-end">
                        <small class="text-muted">
                            @Model.AssignedRequests.Count assignment(s) displayed
                        </small>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Overdue Work Alert -->
@if (Model.TotalOverdue > 0 && Model.StatusFilter == "All")
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Urgent!</strong> You have @Model.TotalOverdue overdue assignment(s) that need immediate attention.
                <a asp-page="/Worker/Assignments" asp-route-status="Overdue" class="alert-link">View overdue work</a>
            </div>
        </div>
    </div>
}

<!-- Assignments List -->
@if (Model.AssignedRequests.Any())
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-wrench me-2"></i>Work Assignments
                        @if (Model.StatusFilter != "All")
                        {
                            <span class="badge bg-primary ms-2">@Model.StatusFilter</span>
                        }
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                            <tr>
                                <th>Property & Unit</th>
                                <th>Issue</th>
                                <th>Status</th>
                                <th>Urgency</th>
                                <th>Scheduled</th>
                                <th>Contact</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var request in Model.AssignedRequests)
                            {
                                <tr class="@Model.GetRowClass(request)">
                                    <td>
                                        <div>
                                            <div class="fw-bold">@request.PropertyName</div>
                                            <small class="text-muted">
                                                Unit @request.UnitNumber
                                                @if (Model.IsOverdue(request))
                                                {
                                                    <i class="fas fa-clock text-danger ms-1" title="Overdue"></i>
                                                }
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <div class="fw-bold">@request.Title</div>
                                            <div class="text-truncate" style="max-width: 200px;" title="@request.ProblemDescription">
                                                @request.ProblemDescription
                                            </div>
                                            <small class="text-muted">@request.Code</small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="@Model.GetStatusBadgeClass(request.Status)">
                                            @request.Status
                                        </span>
                                    </td>
                                    <td>
                                        <span class="@Model.GetUrgencyBadgeClass(request.UrgencyLevel)">
                                            @request.UrgencyLevel
                                        </span>
                                        @if (request.IsEmergency)
                                        {
                                            <i class="fas fa-exclamation-triangle text-danger ms-1" title="Emergency"></i>
                                        }
                                    </td>
                                    <td>
                                        @if (request.ScheduledDate.HasValue)
                                        {
                                            <div>@Model.GetFormattedDateTime(request.ScheduledDate.Value)</div>
                                            @if (Model.IsOverdue(request))
                                            {
                                                <small class="text-danger fw-bold">OVERDUE</small>
                                            }
                                            else if (request.ScheduledDate.Value.Date == DateTime.Today)
                                            {
                                                <small class="text-primary fw-bold">TODAY</small>
                                            }
                                            else if (request.ScheduledDate.Value.Date == DateTime.Today.AddDays(1))
                                            {
                                                <small class="text-warning fw-bold">TOMORROW</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not scheduled</span>
                                        }
                                    </td>
                                    <td>
                                        <div>
                                            <div class="small">@request.TenantName</div>
                                            @if (!string.IsNullOrEmpty(request.TenantPhone))
                                            {
                                                <a href="tel:@request.TenantPhone" class="text-decoration-none small">
                                                    <i class="fas fa-phone me-1"></i>@request.TenantPhone
                                                </a>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="/TenantRequests/Details" asp-route-id="@request.Id"
                                               class="btn btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (request.Status == "Scheduled")
                                            {
                                                <a asp-page="/Worker/StartWork" asp-route-id="@request.Id"
                                                   class="btn btn-outline-success" title="Start Work">
                                                    <i class="fas fa-play"></i>
                                                </a>
                                            }
                                            @if (request.Status == "InProgress")
                                            {
                                                <a asp-page="/Worker/CompleteWork" asp-route-id="@request.Id"
                                                   class="btn btn-outline-warning" title="Complete Work">
                                                    <i class="fas fa-check"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Empty State -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-tools fa-4x text-muted"></i>
                    </div>
                    <h4 class="text-muted mb-3">No Assignments Found</h4>
                    @if (Model.StatusFilter != "All")
                    {
                        <p class="text-muted mb-4">
                            No assignments match your current filter. Try adjusting your search criteria.
                        </p>
                        <a asp-page="/Worker/Assignments" class="btn btn-outline-primary me-3">
                            <i class="fas fa-times me-2"></i>Clear Filters
                        </a>
                    }
                    else
                    {
                        <p class="text-muted mb-4">
                            You don't have any work assignments at the moment.
                        </p>
                    }
                    <a asp-page="/Worker/Available" class="btn btn-primary">
                        <i class="fas fa-search me-2"></i>Find Available Work
                    </a>
                </div>
            </div>
        </div>
    </div>
}

<!-- Back to Dashboard -->
<div class="row mt-4">
    <div class="col-12">
        <a asp-page="/Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>
</div>

@section Scripts {
    <script>
        // Auto-refresh every 60 seconds for assignment updates
        setTimeout(function() {
            location.reload();
        }, 60000);

        // Highlight overdue work with simple style changes
        document.addEventListener('DOMContentLoaded', function() {
            const overdueRows = document.querySelectorAll('.table-danger');
            overdueRows.forEach(row => {
                row.style.backgroundColor = '#f8d7da';
                row.style.borderColor = '#f5c6cb';
            });
        });
    </script>
}