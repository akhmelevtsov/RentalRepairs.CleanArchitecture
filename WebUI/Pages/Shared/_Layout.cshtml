<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Rental Repairs</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-page="/Index">
                <i class="fas fa-tools me-2"></i>Rental Repairs
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">
                            <i class="fas fa-home me-1"></i>Dashboard
                        </a>
                    </li>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        var userRole = User.FindFirst("role")?.Value;

                        @if (userRole == "Tenant")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/TenantRequests/List">
                                    <i class="fas fa-list me-1"></i>My Requests
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/TenantRequests/Submit">
                                    <i class="fas fa-plus me-1"></i>Submit Request
                                </a>
                            </li>
                        }
                        else if (userRole == "PropertySuperintendent")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Properties/Register">
                                    <i class="fas fa-building me-1"></i>Properties
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/TenantRequests/Manage">
                                    <i class="fas fa-tasks me-1"></i>Manage Requests
                                </a>
                            </li>
                        }
                        else if (userRole == "Worker")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Worker/Assignments">
                                    <i class="fas fa-wrench me-1"></i>My Assignments
                                </a>
                            </li>
                        }
                        else if (userRole == "SystemAdmin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index">
                                    <i class="fas fa-cog me-1"></i>Administration
                                </a>
                            </li>
                        }
                    }
                </ul>

                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>

<main class="flex-grow-1">
    @if (TempData["Success"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    @RenderBody()
</main>

<footer class="bg-light mt-5 py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <p class="mb-0">&copy; @DateTime.Now.Year Rental Repairs System</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-page="/Privacy" class="text-decoration-none">Privacy Policy</a>
            </div>
        </div>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", false)
</body>
</html>