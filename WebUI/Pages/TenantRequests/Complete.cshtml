@page "/tenant-requests/complete/{id:guid}"
@model RentalRepairs.WebUI.Pages.TenantRequests.CompleteModel
@{
    ViewData["Title"] = "Report Work Completed";
}

<div class="container-fluid py-4">
    
    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2 mb-0">
                <i class="fas fa-clipboard-check me-2"></i>Report Work Completed
            </h1>
            <p class="text-muted">Report the completion status of your assigned work</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Work Order Details -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Work Order Information</h5>
                </div>
                <div class="card-body">
                    @if (Model.RequestDetails != null)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-4">Work Order:</dt>
                                    <dd class="col-sm-8">@Model.RequestDetails.WorkOrderNumber</dd>
                                    
                                    <dt class="col-sm-4">Property:</dt>
                                    <dd class="col-sm-8">@Model.RequestDetails.PropertyName</dd>
                                    
                                    <dt class="col-sm-4">Unit:</dt>
                                    <dd class="col-sm-8">@Model.RequestDetails.TenantUnit</dd>
                                    
                                    <dt class="col-sm-4">Tenant:</dt>
                                    <dd class="col-sm-8">@Model.RequestDetails.TenantFullName</dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-4">Scheduled:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.RequestDetails.ScheduledDate.HasValue)
                                        {
                                            @Model.RequestDetails.ScheduledDate.Value.ToString("MMMM dd, yyyy 'at' h:mm tt")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not scheduled</span>
                                        }
                                    </dd>
                                    
                                    <dt class="col-sm-4">Status:</dt>
                                    <dd class="col-sm-8">
                                        <span class="badge bg-warning">@Model.RequestDetails.Status</span>
                                    </dd>
                                    
                                    <dt class="col-sm-4">Priority:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.RequestDetails.UrgencyLevel == "Emergency")
                                        {
                                            <span class="badge bg-danger">Emergency</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@Model.RequestDetails.UrgencyLevel</span>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <h6>Work Description:</h6>
                            <p class="border p-3 rounded bg-light">@Model.RequestDetails.Description</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Completion Form -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Report Work Completion</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                        
                        <input type="hidden" asp-for="RequestId" />
                        
                        <div class="mb-4">
                            <label class="form-label">
                                <i class="fas fa-question-circle me-2"></i>Was the work completed successfully? <span class="text-danger">*</span>
                            </label>
                            <div class="mt-2">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="CompletedSuccessfully" value="true" id="successYes">
                                    <label class="form-check-label text-success fw-bold" for="successYes">
                                        <i class="fas fa-check-circle me-1"></i>Yes - Work Completed Successfully
                                    </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="CompletedSuccessfully" value="false" id="successNo">
                                    <label class="form-check-label text-warning fw-bold" for="successNo">
                                        <i class="fas fa-exclamation-triangle me-1"></i>No - Work Failed or Incomplete
                                    </label>
                                </div>
                            </div>
                            <span asp-validation-for="CompletedSuccessfully" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CompletionNotes" class="form-label">
                                <i class="fas fa-sticky-note me-2"></i>Completion Notes <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="CompletionNotes" class="form-control" rows="5" 
                                     placeholder="Please provide details about the work performed, any issues encountered, parts used, or follow-up needed..."></textarea>
                            <span asp-validation-for="CompletionNotes" class="text-danger"></span>
                            <div class="form-text">
                                Provide detailed notes about the work performed, including any parts used, issues encountered, or recommendations for follow-up.
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-clipboard-check me-2"></i>Report Work Completed
                            </button>
                            <a href="/tenant-requests/@Model.RequestId" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Details
                            </a>
                            <a href="/Index" class="btn btn-outline-secondary">
                                <i class="fas fa-tachometer-alt me-2"></i>Back to Dashboard
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Worker Information -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Worker Information</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-hard-hat fa-2x text-primary"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-1">@(User.Identity?.Name ?? "Worker")</h6>
                            <small class="text-muted">
                                Specialization: @(User.FindFirst("worker_specialization")?.Value ?? "General")
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Next Steps Info -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-arrow-right me-2"></i>What Happens Next?</h6>
                </div>
                <div class="card-body">
                    <div class="small">
                        <div class="d-flex align-items-start mb-2">
                            <i class="fas fa-check-circle text-success me-2 mt-1"></i>
                            <span>Request status will be updated to <strong>Done</strong> or <strong>Failed</strong></span>
                        </div>
                        <div class="d-flex align-items-start mb-2">
                            <i class="fas fa-bell text-info me-2 mt-1"></i>
                            <span>Property superintendent will be notified</span>
                        </div>
                        <div class="d-flex align-items-start mb-2">
                            <i class="fas fa-envelope text-primary me-2 mt-1"></i>
                            <span>Tenant will receive completion update</span>
                        </div>
                        <div class="d-flex align-items-start">
                            <i class="fas fa-tachometer-alt text-secondary me-2 mt-1"></i>
                            <span>You'll return to your dashboard to see next assignments</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Guidelines -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Completion Guidelines</h6>
                </div>
                <div class="card-body">
                    <div class="small">
                        <div class="mb-3">
                            <strong class="text-success">If Work Completed Successfully:</strong>
                            <ul class="mt-1 mb-0">
                                <li>Describe what was fixed or repaired</li>
                                <li>List any parts or materials used</li>
                                <li>Note any preventive measures taken</li>
                                <li>Mention if tenant was satisfied</li>
                            </ul>
                        </div>
                        
                        <div class="mb-3">
                            <strong class="text-warning">If Work Failed or Incomplete:</strong>
                            <ul class="mt-1 mb-0">
                                <li>Explain what prevented completion</li>
                                <li>List additional parts or tools needed</li>
                                <li>Recommend next steps or specialist referral</li>
                                <li>Estimate time needed for completion</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Form validation feedback
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const successRadios = document.querySelectorAll('input[name="CompletedSuccessfully"]');
            const notesTextarea = document.querySelector('#CompletionNotes');
            
            // Dynamic placeholder based on success/failure selection
            successRadios.forEach(radio => {
                radio.addEventListener('change', function() {
                    if (this.value === 'true') {
                        notesTextarea.placeholder = 'Describe the work completed, parts used, and any recommendations...';
                    } else {
                        notesTextarea.placeholder = 'Explain what prevented completion, additional resources needed, and recommended next steps...';
                    }
                });
            });
            
            // Form submission confirmation
            form.addEventListener('submit', function(e) {
                const selectedRadio = document.querySelector('input[name="CompletedSuccessfully"]:checked');
                const notes = notesTextarea.value.trim();
                
                if (!selectedRadio) {
                    e.preventDefault();
                    alert('Please select whether the work was completed successfully.');
                    return false;
                }
                
                if (!notes) {
                    e.preventDefault();
                    alert('Please provide completion notes.');
                    return false;
                }
                
                const completedSuccessfully = selectedRadio.value === 'true';
                const confirmMessage = completedSuccessfully 
                    ? 'Are you sure you want to report this work as completed successfully? You will return to your dashboard.'
                    : 'Are you sure you want to report this work as failed or incomplete? You will return to your dashboard.';
                
                if (!confirm(confirmMessage)) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>
}