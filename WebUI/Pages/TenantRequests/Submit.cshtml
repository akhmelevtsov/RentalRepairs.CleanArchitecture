@page
@model SubmitModel
@{
    ViewData["Title"] = "Submit Maintenance Request";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Submit Maintenance Request
                    </h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="TenantRequest.PropertyCode" class="form-label">
                                    <i class="fas fa-building me-2"></i>Property Code
                                </label>
                                <input asp-for="TenantRequest.PropertyCode" class="form-control" placeholder="Enter property code" />
                                <span asp-validation-for="TenantRequest.PropertyCode" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TenantRequest.UnitNumber" class="form-label">
                                    <i class="fas fa-door-open me-2"></i>Unit Number
                                </label>
                                <input asp-for="TenantRequest.UnitNumber" class="form-control" placeholder="Enter unit number" />
                                <span asp-validation-for="TenantRequest.UnitNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="TenantRequest.TenantFirstName" class="form-label">
                                    <i class="fas fa-user me-2"></i>First Name
                                </label>
                                <input asp-for="TenantRequest.TenantFirstName" class="form-control" placeholder="Enter first name" />
                                <span asp-validation-for="TenantRequest.TenantFirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TenantRequest.TenantLastName" class="form-label">
                                    <i class="fas fa-user me-2"></i>Last Name
                                </label>
                                <input asp-for="TenantRequest.TenantLastName" class="form-control" placeholder="Enter last name" />
                                <span asp-validation-for="TenantRequest.TenantLastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="TenantRequest.TenantEmail" class="form-label">
                                    <i class="fas fa-envelope me-2"></i>Email Address
                                </label>
                                <input asp-for="TenantRequest.TenantEmail" class="form-control" placeholder="Enter email address" />
                                <span asp-validation-for="TenantRequest.TenantEmail" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TenantRequest.TenantPhone" class="form-label">
                                    <i class="fas fa-phone me-2"></i>Phone Number
                                </label>
                                <input asp-for="TenantRequest.TenantPhone" class="form-control" placeholder="Enter phone number" />
                                <span asp-validation-for="TenantRequest.TenantPhone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TenantRequest.ProblemDescription" class="form-label">
                                <i class="fas fa-comment-alt me-2"></i>Problem Description
                            </label>
                            <textarea asp-for="TenantRequest.ProblemDescription" class="form-control" rows="4" 
                                      placeholder="Please describe the maintenance issue in detail..."></textarea>
                            <span asp-validation-for="TenantRequest.ProblemDescription" class="text-danger"></span>
                            <div class="form-text">
                                Please provide as much detail as possible to help us understand and address your request.
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="TenantRequest.IsEmergency" class="form-check-input" />
                                    <label asp-for="TenantRequest.IsEmergency" class="form-check-label">
                                        <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                                        This is an emergency request
                                    </label>
                                </div>
                                <div class="form-text">
                                    Check this box for urgent issues that pose safety risks or require immediate attention.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TenantRequest.PreferredContactTime" class="form-label">
                                    <i class="fas fa-clock me-2"></i>Preferred Contact Time
                                </label>
                                <select asp-for="TenantRequest.PreferredContactTime" class="form-select">
                                    <option value="">Select preferred time</option>
                                    <option value="Morning (8 AM - 12 PM)">Morning (8 AM - 12 PM)</option>
                                    <option value="Afternoon (12 PM - 5 PM)">Afternoon (12 PM - 5 PM)</option>
                                    <option value="Evening (5 PM - 8 PM)">Evening (5 PM - 8 PM)</option>
                                    <option value="Anytime">Anytime</option>
                                </select>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="/Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-2"></i>Submit Request
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Show additional warning for emergency requests
        document.getElementById('TenantRequest_IsEmergency').addEventListener('change', function() {
            if (this.checked) {
                alert('Emergency requests will be prioritized and you will be contacted as soon as possible. For immediate life-threatening situations, please call 911.');
            }
        });
    </script>
}