@page
@model RentalRepairs.WebUI.Pages.TenantRequests.ManageModel
@{
    ViewData["Title"] = "Manage Requests";
}

<div class="container py-4">
<!-- Page Header -->
<div class="row mb-4">
    <div class="col">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="h3 mb-1">
                    <i class="fas fa-tasks me-2"></i>Manage Maintenance Requests
                </h2>
                <p class="text-muted mb-0">
                    <i class="fas fa-user-tie me-1"></i>@Model.SuperintendentName
                    @if (!string.IsNullOrEmpty(Model.PropertyName))
                    {
                        <span> - @Model.PropertyName</span>
                    }
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card border-primary">
            <div class="card-body text-center">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-muted mb-1">Total Requests</h6>
                        <div class="h4 mb-0 text-primary">@Model.TotalRequests</div>
                    </div>
                    <i class="fas fa-clipboard-list fa-2x text-primary opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-info">
            <div class="card-body text-center">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-muted mb-1">Pending Assignment</h6>
                        <div class="h4 mb-0 text-info">@Model.TotalPending</div>
                    </div>
                    <i class="fas fa-clock fa-2x text-info opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-warning">
            <div class="card-body text-center">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-muted mb-1">Emergency</h6>
                        <div class="h4 mb-0 text-warning">@Model.TotalEmergency</div>
                    </div>
                    <i class="fas fa-exclamation-triangle fa-2x text-warning opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-danger">
            <div class="card-body text-center">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-muted mb-1">Overdue</h6>
                        <div class="h4 mb-0 text-danger">@Model.TotalOverdue</div>
                    </div>
                    <i class="fas fa-clock fa-2x text-danger opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-filter me-2"></i>Filter Options
                </h5>
            </div>
            <div class="card-body">
                <form method="get" class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label for="status" class="form-label">Status</label>
                        <select name="status" id="status" class="form-select" asp-for="StatusFilter">
                            @foreach (var status in Model.StatusOptions)
                            {
                                <option value="@status" selected="@(status == Model.StatusFilter)">@status</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="urgency" class="form-label">Urgency</label>
                        <select name="urgency" id="urgency" class="form-select" asp-for="UrgencyFilter">
                            @foreach (var urgency in Model.UrgencyOptions)
                            {
                                <option value="@urgency" selected="@(urgency == Model.UrgencyFilter)">@urgency</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="fas fa-filter me-2"></i>Filter
                        </button>
                        <a asp-page="/TenantRequests/Manage" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-times me-2"></i>Clear
                        </a>
                    </div>
                    <div class="col-md-3 text-end">
                        <small class="text-muted">
                            @Model.Requests.Count of @Model.TotalRequests request(s) displayed
                        </small>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Emergency Requests Alert -->
@if (Model.TotalEmergency > 0 && Model.StatusFilter == "All")
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Priority Alert!</strong> You have @Model.TotalEmergency emergency request(s) requiring immediate attention.
                <a asp-page="/TenantRequests/Manage" asp-route-urgency="Critical" class="alert-link">View emergency requests</a>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
}

<!-- Overdue Requests Alert -->
@if (Model.TotalOverdue > 0 && Model.StatusFilter == "All")
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-clock me-2"></i>
                <strong>Overdue Alert!</strong> You have @Model.TotalOverdue overdue request(s) that need immediate action.
                <a asp-page="/TenantRequests/Manage" asp-route-status="Scheduled" class="alert-link">View overdue requests</a>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
}

<!-- Requests Management Table -->
@if (Model.Requests.Any())
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>Requests
                            @if (Model.StatusFilter != "All")
                            {
                                <span class="badge bg-light text-dark ms-2">@Model.StatusFilter</span>
                            }
                        </h5>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                            <tr>
                                <th>Property & Unit</th>
                                <th>Tenant</th>
                                <th>Issue</th>
                                <th>Status</th>
                                <th>Urgency</th>
                                <th>Submitted</th>
                                <th>Scheduled</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var request in Model.Requests)
                            {
                                <tr class="@Model.GetRowClass(request)">
                                    <td>
                                        <div>
                                            <div class="fw-bold">@request.PropertyName</div>
                                            <small class="text-muted">
                                                Unit @request.UnitNumber
                                                @if (Model.IsOverdue(request))
                                                {
                                                    <i class="fas fa-clock text-danger ms-1" title="Overdue"></i>
                                                }
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <div class="small">@request.TenantName</div>
                                            @if (!string.IsNullOrEmpty(request.TenantPhone))
                                            {
                                                <a href="tel:@request.TenantPhone" class="text-decoration-none small">
                                                    <i class="fas fa-phone me-1"></i>@request.TenantPhone
                                                </a>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <div class="fw-bold">@request.Title</div>
                                            <div class="text-truncate" style="max-width: 200px;" title="@request.ProblemDescription">
                                                @request.ProblemDescription
                                            </div>
                                            <small class="text-muted">@request.Code</small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="@Model.GetStatusBadgeClass(request.Status)">
                                            @request.Status
                                        </span>
                                    </td>
                                    <td>
                                        <span class="@Model.GetUrgencyBadgeClass(request.UrgencyLevel)">
                                            @request.UrgencyLevel
                                        </span>
                                        @if (request.IsEmergency)
                                        {
                                            <i class="fas fa-exclamation-triangle text-danger ms-1" title="Emergency"></i>
                                        }
                                    </td>
                                    <td>
                                        <div>@Model.GetFormattedDate(request.SubmittedDate)</div>
                                    </td>
                                    <td>
                                        @if (request.ScheduledDate.HasValue)
                                        {
                                            <div class="text-success">
                                                <i class="fas fa-calendar-check me-1"></i>
                                                @Model.GetFormattedDate(request.ScheduledDate.Value)
                                            </div>
                                            @if (!string.IsNullOrEmpty(request.AssignedWorkerName))
                                            {
                                                <small class="text-muted">
                                                    <i class="fas fa-user me-1"></i>@request.AssignedWorkerName
                                                </small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">
                                                <i class="fas fa-calendar-times me-1"></i>Not scheduled
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/tenant-requests/@request.Id"
                                               class="btn btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (Model.CanAssign(request))
                                            {
                                                <a asp-page="/TenantRequests/AssignWorker" asp-route-requestId="@request.Id"
                                                   class="btn btn-outline-success" title="Assign Worker">
                                                    <i class="fas fa-user-plus"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Request pagination">
                    <ul class="pagination justify-content-center">
                        <!-- Previous page -->
                        <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                            <a class="page-link" asp-page="/TenantRequests/Manage"
                               asp-route-pageNumber="@(Model.CurrentPage - 1)"
                               asp-route-status="@Model.StatusFilter"
                               asp-route-urgency="@Model.UrgencyFilter">
                                <i class="fas fa-chevron-left"></i> Previous
                            </a>
                        </li>

                        <!-- Page numbers -->
                        @for (var i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-page="/TenantRequests/Manage"
                                   asp-route-pageNumber="@i"
                                   asp-route-status="@Model.StatusFilter"
                                   asp-route-urgency="@Model.UrgencyFilter">
                                    @i
                                </a>
                            </li>
                        }

                        <!-- Next page -->
                        <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-page="/TenantRequests/Manage"
                               asp-route-pageNumber="@(Model.CurrentPage + 1)"
                               asp-route-status="@Model.StatusFilter"
                               asp-route-urgency="@Model.UrgencyFilter">
                                Next <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    }
}
else
{
    <!-- Empty State -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-search me-2"></i>No Results
                    </h5>
                </div>
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-tasks fa-4x text-muted"></i>
                    </div>
                    <h4 class="text-muted mb-3">No Requests Found</h4>
                    @if (Model.StatusFilter != "All" || Model.UrgencyFilter != "All")
                    {
                        <p class="text-muted mb-4">
                            No requests match your current filters. Try adjusting your search criteria.
                        </p>
                        <a asp-page="/TenantRequests/Manage" class="btn btn-outline-primary">
                            <i class="fas fa-times me-2"></i>Clear Filters
                        </a>
                    }
                    else
                    {
                        <p class="text-muted mb-4">
                            No maintenance requests are currently in the system.
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
}

<!-- Back to Dashboard -->
<div class="row mt-4">
    <div class="col-12">
        <a asp-page="/Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>
</div>

@section Scripts {
    <script>
        // Auto-refresh every 2 minutes for status updates
        setTimeout(function() {
            location.reload();
        }, 120000);
    </script>
}