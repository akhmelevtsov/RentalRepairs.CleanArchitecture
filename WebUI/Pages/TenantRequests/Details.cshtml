@page "/tenant-requests/{id:guid}"
@model RentalRepairs.WebUI.Pages.TenantRequests.DetailsModel
@{
    ViewData["Title"] = "Request Details";
    var request = Model.TenantRequest;
}

<!-- Display success/error messages from TempData -->
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i> @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        @request?.Title
                        <small class="text-light opacity-75">(@request?.Code)</small>
                    </h4>
                    <!-- UI HELPER: Centralized status badge styling -->
                    <span class="@Model.GetStatusBadgeClass()">
                        @request?.Status
                    </span>
                </div>
                
                <div class="card-body">
                    <!-- UI HELPER: Enhanced emergency alert with centralized logic -->
                    @if (Model.ShouldShowEmergencyAlert())
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Emergency Request!</strong> High priority service needed.
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- UI HELPER: Overdue warning using centralized logic -->
                    @if (Model.ShouldShowOverdueWarning())
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="fas fa-clock me-2"></i>
                            <strong>Overdue:</strong> This request is past its scheduled date.
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- UI HELPER: Progress indicator for request workflow -->
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <small class="text-muted">Request Progress</small>
                            <small class="text-muted">@Model.GetProgressPercentage()%</small>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-primary" role="progressbar" 
                                 style="width: @(Model.GetProgressPercentage())%" 
                                 aria-valuenow="@Model.GetProgressPercentage()" 
                                 aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <small class="text-muted">@Model.GetStatusDescription()</small>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-dark fw-bold">Request Information</h6>
                            <dl class="row">
                                <dt class="col-sm-4">Description:</dt>
                                <dd class="col-sm-8">@request?.Description</dd>
                                
                                <!-- UI HELPER: Enhanced urgency display with icon and badge -->
                                <dt class="col-sm-4">Urgency:</dt>
                                <dd class="col-sm-8">
                                    <span class="@Model.GetUrgencyClass()">@request?.UrgencyLevel</span>
                                </dd>
                                
                                <dt class="col-sm-4">Created:</dt>
                                <dd class="col-sm-8">@Model.GetFormattedCreatedDate()</dd>
                                
                                @if (request?.ScheduledDate.HasValue == true)
                                {
                                    <dt class="col-sm-4">Scheduled:</dt>
                                    <dd class="col-sm-8">@Model.GetFormattedScheduledDate()</dd>
                                }
                            </dl>
                        </div>
                        
                        <div class="col-md-6">
                            <h6 class="text-dark fw-bold">Tenant Information</h6>
                            <dl class="row">
                                <!-- Direct access to flattened tenant data -->
                                <dt class="col-sm-4">Tenant:</dt>
                                <dd class="col-sm-8">@request?.TenantFullName</dd>
                                
                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">
                                    <a href="mailto:@request?.TenantEmail">@request?.TenantEmail</a>
                                </dd>
                                
                                <dt class="col-sm-4">Unit:</dt>
                                <dd class="col-sm-8">@request?.TenantUnit</dd>
                            </dl>
                            
                            <h6 class="text-dark fw-bold">Property Information</h6>
                            <dl class="row">
                                <!-- Direct access to flattened property data -->
                                <dt class="col-sm-4">Property:</dt>
                                <dd class="col-sm-8">@request?.PropertyName</dd>
                                
                                <dt class="col-sm-4">Phone:</dt>
                                <dd class="col-sm-8">
                                    <a href="tel:@request?.PropertyPhone">@request?.PropertyPhone</a>
                                </dd>
                                
                                <!-- FIXED: Ensure proper HTML structure for superintendent field -->
                                <dt class="col-sm-4">Superintendent</dt>
                                <dd class="col-sm-8">@request?.SuperintendentFullName</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- UI HELPER: Conditional work assignment section -->
                    @if (Model.ShouldShowWorkAssignment())
                    {
                        <div class="mt-4">
                            <h6 class="text-dark fw-bold">Work Assignment</h6>
                            <dl class="row">
                                @if (!string.IsNullOrEmpty(request?.AssignedWorkerEmail))
                                {
                                    <dt class="col-sm-2">Assigned Worker:</dt>
                                    <dd class="col-sm-4">@request.AssignedWorkerEmail</dd>
                                }
                                
                                @if (!string.IsNullOrEmpty(request?.WorkOrderNumber))
                                {
                                    <dt class="col-sm-2">Work Order:</dt>
                                    <dd class="col-sm-4">@request.WorkOrderNumber</dd>
                                }
                            </dl>
                            
                            @if (!string.IsNullOrEmpty(request?.CompletionNotes))
                            {
                                <div class="alert alert-info">
                                    <strong>Completion Notes:</strong> @request.CompletionNotes
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <!-- Action Panel -->
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0">Available Actions</h6>
                </div>
                <div class="card-body">
                    <!-- Worker "Report Work Completed" button -->
                    @if (User.IsInRole("Worker") && request?.Status == "Scheduled")
                    {
                        var workerEmail = User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? User.FindFirst("email")?.Value;
                        if (!string.IsNullOrEmpty(workerEmail) && request.AssignedWorkerEmail?.Equals(workerEmail, StringComparison.OrdinalIgnoreCase) == true)
                        {
                            <a asp-page="/TenantRequests/Complete" asp-route-id="@request.Id" class="btn btn-success w-100 mb-2">
                                <i class="fas fa-clipboard-check me-2"></i>Report Work Completed
                            </a>
                            <hr />
                        }
                    }

                    @{
                        var availableActions = Model.GetAvailableQuickActions();
                        
                        // Filter out "Report Work Completed" action for Workers since they have domain-specific "Report Work Completed" button above
                        if (User.IsInRole("Worker"))
                        {
                            availableActions = availableActions.Where(a => a != "Report Work Completed").ToList();
                        }
                    }
                    
                    @foreach (var action in availableActions)
                    {
                        @if (action == "Submit")
                        {
                            <form method="post" asp-page-handler="Submit" asp-route-id="@request.Id" class="mb-2">
                                @Html.AntiForgeryToken() <!-- CSRF Protection -->
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-paper-plane me-2"></i>@action
                                </button>
                            </form>
                        }
                        else if (action == "Close")
                        {
                            <form method="post" asp-page-handler="Close" asp-route-id="@request.Id" class="mb-2">
                                @Html.AntiForgeryToken() <!-- CSRF Protection -->
                                <div class="mb-2">
                                    <label for="closureNotes" class="form-label">Closure Notes</label>
                                    <textarea name="closureNotes" id="closureNotes" class="form-control" rows="3" 
                                             placeholder="Enter notes about why this request is being closed..." required></textarea>
                                </div>
                                <button type="submit" class="btn btn-warning w-100">
                                    <i class="fas fa-archive me-2"></i>Close Request
                                </button>
                            </form>
                        }
                        else
                        {
                            @if (action == "Assign Worker")
                            {
                                <a asp-page="/TenantRequests/AssignWorker" asp-route-requestId="@request.Id" asp-route-returnUrl="@($"{HttpContext.Request.Path}{HttpContext.Request.QueryString}")" 
                                   class="btn btn-outline-primary w-100 mb-2">
                                    <i class="fas fa-user-plus me-2"></i>@action
                                </a>
                            }
                            else if (action == "Report Work Completed")
                            {
                                <a asp-page="/TenantRequests/Complete" asp-route-id="@request.Id" asp-route-returnUrl="@($"{HttpContext.Request.Path}{HttpContext.Request.QueryString}")" 
                                   class="btn btn-outline-primary w-100 mb-2">
                                    <i class="fas fa-clipboard-check me-2"></i>@action
                                </a>
                            }
                            else if (action == "Decline")
                            {
                                <a asp-page="/TenantRequests/Decline" asp-route-id="@request.Id" 
                                   class="btn btn-outline-warning w-100 mb-2">
                                    <i class="fas fa-times-circle me-2"></i>@action
                                </a>
                            }
                            else
                            {
                                <a href="/tenant-requests/@(action.ToLower().Replace(" ", "-"))/@request.Id" 
                                   class="btn btn-outline-primary w-100 mb-2">
                                    <i class="fas fa-cog me-2"></i>@action
                                </a>
                            }
                        }
                    }
                    
                    <!-- Smart Navigation Links - Uses ReturnUrl when available -->
                    @{
                        var returnUrl = ViewData["ReturnUrl"] as string;
                        var hasReturnUrl = !string.IsNullOrEmpty(returnUrl);
                    }
                    
                    @if (hasReturnUrl)
                    {
                        <a href="@returnUrl" class="btn btn-outline-secondary w-100 mt-2">
                            <i class="fas fa-arrow-left me-2"></i>Back
                        </a>
                    }
                    else
                    {
                        <!-- Fallback to role-based navigation when no ReturnUrl -->
                        @if (User.IsInRole("PropertySuperintendent"))
                        {
                            <a href="/TenantRequests/Manage" class="btn btn-outline-secondary w-100 mt-2">
                                <i class="fas fa-arrow-left me-2"></i>Back to Manage Requests
                            </a>
                        }
                        else if (User.IsInRole("SystemAdmin"))
                        {
                            <a href="/Index" class="btn btn-outline-secondary w-100 mt-2">
                                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                            </a>
                        }
                        else if (User.IsInRole("Worker"))
                        {
                            <a href="/Index" class="btn btn-outline-secondary w-100 mt-2">
                                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                            </a>
                        }
                        else if (User.IsInRole("Tenant"))
                        {
                            <a href="/Index" class="btn btn-outline-secondary w-100 mt-2">
                                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                            </a>
                        }
                        else
                        {
                            <!-- Fallback for any other roles or unauthenticated users -->
                            <a href="/Index" class="btn btn-outline-secondary w-100 mt-2">
                                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                            </a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // JavaScript can work with simple data - no complex object serialization
        const requestData = {
            id: '@request?.Id',
            status: '@request?.Status',
            isEmergency: @((request?.UrgencyLevel == "Emergency").ToString().ToLower()),
            progressPercentage: @Model.GetProgressPercentage()
        };
        
        console.log('Request data:', requestData);
        
        // Form validation for closure notes
        const closeForm = document.querySelector('form[asp-page-handler="Close"]');
        if (closeForm) {
            closeForm.addEventListener('submit', function(e) {
                const closureNotes = document.getElementById('closureNotes');
                if (closureNotes && !closureNotes.value.trim()) {
                    e.preventDefault();
                    alert('Please enter closure notes before closing the request.');
                    return false;
                }
            });
        }

        // Progress bar animation
        document.addEventListener('DOMContentLoaded', function() {
            const progressBar = document.querySelector('.progress-bar');
            if (progressBar) {
                progressBar.style.width = '0%';
                setTimeout(() => {
                    progressBar.style.width = '@(Model.GetProgressPercentage())%';
                }, 300);
            }
        });
    </script>
    
    <style>
        /* Fix for definition list formatting to prevent stray colons */
        .row dl.row dt {
            text-align: left;
            margin-bottom: 0;
        }
        
        .row dl.row dd {
            margin-bottom: 0.5rem;
        }
        
        /* Ensure proper spacing in definition lists */
        dl.row {
            margin-bottom: 1rem;
        }
    </style>
}