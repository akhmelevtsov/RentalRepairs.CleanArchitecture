@page
@model RentalRepairs.WebUI.Pages.TenantRequests.ListModel
@{
    ViewData["Title"] = "My Requests";
}

<div class="container-fluid mt-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="h3 mb-1">
                        <i class="fas fa-list me-2"></i>My Maintenance Requests
                    </h2>
                    <p class="text-muted mb-0">
                        <i class="fas fa-building me-1"></i>@Model.PropertyName - Unit @Model.UnitNumber
                    </p>
                </div>
                <div>
                    <a asp-page="/TenantRequests/Submit" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Submit New Request
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3 align-items-end">
                        <div class="col-md-3">
                            <label for="status" class="form-label">Status</label>
                            <select name="status" id="status" class="form-select" asp-for="StatusFilter">
                                @foreach (var status in Model.StatusOptions)
                                {
                                    <option value="@status" selected="@(status == Model.StatusFilter)">@status</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="urgency" class="form-label">Urgency</label>
                            <select name="urgency" id="urgency" class="form-select" asp-for="UrgencyFilter">
                                @foreach (var urgency in Model.UrgencyOptions)
                                {
                                    <option value="@urgency" selected="@(urgency == Model.UrgencyFilter)">@urgency</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="fas fa-filter me-2"></i>Filter
                            </button>
                            <a asp-page="/TenantRequests/List" class="btn btn-outline-secondary ms-2">
                                <i class="fas fa-times me-2"></i>Clear
                            </a>
                        </div>
                        <div class="col-md-3 text-end">
                            <small class="text-muted">
                                @Model.TotalRequests total request(s)
                            </small>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Requests List -->
    @if (Model.HasRequests)
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Request</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>Urgency</th>
                                        <th>Submitted</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.Requests)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div>
                                                        <div class="fw-bold">@request.Title</div>
                                                        <small class="text-muted">@request.Code</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="text-truncate" style="max-width: 200px;" title="@request.ProblemDescription">
                                                    @request.ProblemDescription
                                                </div>
                                            </td>
                                            <td>
                                                <span class="@Model.GetStatusBadgeClass(request.Status)">
                                                    @request.Status
                                                </span>
                                            </td>
                                            <td>
                                                <span class="@Model.GetUrgencyBadgeClass(request.UrgencyLevel)">
                                                    @request.UrgencyLevel
                                                </span>
                                                @if (request.IsEmergency)
                                                {
                                                    <i class="fas fa-exclamation-triangle text-danger ms-1" title="Emergency"></i>
                                                }
                                            </td>
                                            <td>
                                                <div>@Model.GetFormattedDate(request.SubmittedDate)</div>
                                                @if (request.ScheduledDate.HasValue)
                                                {
                                                    <small class="text-muted">
                                                        Scheduled: @Model.GetFormattedDate(request.ScheduledDate.Value)
                                                    </small>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-page="/TenantRequests/Details" asp-route-id="@request.Id" 
                                                       class="btn btn-outline-primary" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (request.Status == "Draft")
                                                    {
                                                        <a asp-page="/TenantRequests/Edit" asp-route-id="@request.Id" 
                                                           class="btn btn-outline-warning" title="Edit Request">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="row mt-4">
                <div class="col-12">
                    <nav aria-label="Request pagination">
                        <ul class="pagination justify-content-center">
                            <!-- Previous page -->
                            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                                <a class="page-link" asp-page="/TenantRequests/List" 
                                   asp-route-pageNumber="@(Model.CurrentPage - 1)"
                                   asp-route-status="@Model.StatusFilter"
                                   asp-route-urgency="@Model.UrgencyFilter">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            </li>

                            <!-- Page numbers -->
                            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-page="/TenantRequests/List" 
                                       asp-route-pageNumber="@i"
                                       asp-route-status="@Model.StatusFilter"
                                       asp-route-urgency="@Model.UrgencyFilter">
                                        @i
                                    </a>
                                </li>
                            }

                            <!-- Next page -->
                            <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-page="/TenantRequests/List" 
                                   asp-route-pageNumber="@(Model.CurrentPage + 1)"
                                   asp-route-status="@Model.StatusFilter"
                                   asp-route-urgency="@Model.UrgencyFilter">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        }
    }
    else
    {
        <!-- Empty State -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-inbox fa-4x text-muted"></i>
                        </div>
                        <h4 class="text-muted mb-3">No Requests Found</h4>
                        @if (Model.StatusFilter != "All" || Model.UrgencyFilter != "All")
                        {
                            <p class="text-muted mb-4">
                                No requests match your current filters. Try adjusting your search criteria.
                            </p>
                            <a asp-page="/TenantRequests/List" class="btn btn-outline-primary me-3">
                                <i class="fas fa-times me-2"></i>Clear Filters
                            </a>
                        }
                        else
                        {
                            <p class="text-muted mb-4">
                                You haven't submitted any maintenance requests yet.
                            </p>
                        }
                        <a asp-page="/TenantRequests/Submit" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Submit Your First Request
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Back to Dashboard -->
    <div class="row mt-4">
        <div class="col-12">
            <a asp-page="/Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh every 30 seconds for status updates
        setTimeout(function() {
            location.reload();
        }, 30000);

        // Highlight urgent/emergency requests
        document.addEventListener('DOMContentLoaded', function() {
            const emergencyRows = document.querySelectorAll('tr:has(.fa-exclamation-triangle)');
            emergencyRows.forEach(row => {
                row.classList.add('table-warning');
            });
        });
    </script>
}