@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card">
                <div class="card-body p-5">
                    <i class="fas fa-lock fa-4x text-warning mb-4"></i>
                    <h1 class="h2 mb-3">Access Denied</h1>
                    <p class="text-muted mb-4">
                        You don't have permission to access this resource.
                        Please contact your administrator if you believe this is an error.
                    </p>
                    
                    @if (!string.IsNullOrEmpty(Model.ReturnUrl))
                    {
                        <p class="small text-muted mb-4">
                            Attempted to access: <code>@Model.ReturnUrl</code>
                        </p>
                    }
                    
                    <div class="d-flex gap-2 justify-content-center">
                        <a asp-page="/Index" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Return to Dashboard
                        </a>
                        <a asp-page="/Account/Login" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt me-2"></i>Login as Different User
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>