{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=RentalRepairs;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "TenantRequestPolicy": {
    "MaxPendingRequests": 50,
    "MinimumHoursBetweenSubmissions": 0,
    "MaxEmergencyRequestsPerMonth": 3,
    "EmergencyRequestLookbackDays": 30
  },
  "TenantRequestSubmission": {
    "MaxPendingRequests": 50,
    "MinimumHoursBetweenSubmissions": 0,
    "MaxEmergencyRequestsPerMonth": 3,
    "EmergencyRequestLookbackDays": 30,
    "MaxDescriptionLength": 1000,
    "RequestHistoryAnalysisSize": 50,
    "ContextCacheDurationMinutes": 5,
    "EnforceBusinessHours": false,
    "BusinessHours": {
      "StartTime": "09:00:00",
      "EndTime": "17:00:00",
      "BusinessDays": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "TimeZone": "UTC"
    }
  },
  "Infrastructure": {
    "Database": {
      "EnableRetry": true,
      "CommandTimeoutSeconds": 30,
      "MaxRetryCount": 3,
      "EnableSensitiveDataLogging": false,
      "EnableDetailedErrors": false
    },
    "Audit": {
      "EnableAuditing": true,
      "EnableSoftDelete": true,
      "AuditOnlyChangedProperties": true,
      "DefaultAuditUser": "system",
      "EnableDetailedAuditLog": false,
      "EnableConcurrencyControl": true,
      "MaxAuditEntriesPerEntity": 0,
      "EnableAuditCleanup": false,
      "AuditRetentionDays": 365
    },
    "Email": {
      "Provider": "Mock",
      "DefaultSender": "noreply@rentalrepairs.com",
      "DefaultSenderName": "Rental Repairs System",
      "EnableEmailNotifications": true,
      "Smtp": {
        "Host": "localhost",
        "Port": 587,
        "EnableSsl": true,
        "EnableAuthentication": true
      },
      "SendGrid": {
        "ApiKey": null
      }
    },
    "Authentication": {
      "DefaultAuditUser": "system",
      "TokenExpirationHours": 8,
      "RequireComplexPasswords": false,
      "MaxLoginAttempts": 5,
      "LockoutDurationMinutes": 15
    },
    "Performance": {
      "EnableCaching": true,
      "CacheProvider": "Memory",
      "DefaultCacheExpirationMinutes": 30,
      "EnablePerformanceMonitoring": false,
      "EnableDetailedLogging": false
    }
  },
  "DemoAuthentication": {
    "EnableDemoMode": true,
    "DefaultPassword": "Demo123!",
    "DemoUsers": {},
    "Security": {
      "TokenExpirationHours": 8,
      "MaxLoginAttempts": 3,
      "LockoutDurationMinutes": 30,
      "MinPasswordLength": 8,
      "AllowUserRegistration": false,
      "ShowDemoCredentials": true
    }
  },
  "Seeding": {
    "EnableSeeding": true,
    "PropertyCount": 3,
    "TenantsPerProperty": 3,
    "WorkerCount": 10,
    "DefaultPassword": "Demo123!",
    "CredentialsFileName": "development-credentials.md"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "RentalRepairs.Infrastructure.Services.AuditService": "Debug",
      "RentalRepairs.Infrastructure.Services.DomainEventPublisher": "Debug",
      "RentalRepairs.Infrastructure.Authentication": "Warning"
    }
  },
  "AllowedHosts": "*"
}